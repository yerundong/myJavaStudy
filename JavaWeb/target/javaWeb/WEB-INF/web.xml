<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                      https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <request-character-encoding>UTF-8</request-character-encoding>
    <response-character-encoding>UTF-8</response-character-encoding>

    <context-param>
        <param-name>context1</param-name>
        <param-value>ct1</param-value>
    </context-param>
    <context-param>
        <param-name>context2</param-name>
        <param-value>ct2</param-value>
    </context-param>

    <servlet>
        <servlet-name>HiServlet</servlet-name>
        <servlet-class>servlet.创建Servlet类.HiServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HiServlet</servlet-name>
        <url-pattern>/hi</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>servlet.创建Servlet类.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetRequestInfo</servlet-name>
        <servlet-class>servlet.请求.获取请求信息</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetRequestInfo</servlet-name>
        <url-pattern>/requestInfo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>WriteResponse</servlet-name>
        <servlet-class>servlet.响应.设置响应体</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WriteResponse</servlet-name>
        <url-pattern>/writeResponse</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SetRespHead</servlet-name>
        <servlet-class>servlet.响应.设置响应头</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SetRespHead</servlet-name>
        <url-pattern>/setRespHead</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetServletConfig</servlet-name>
        <servlet-class>servlet.获取ServletConfig和ServletContext</servlet-class>
        <init-param>
            <param-name>key1</param-name>
            <param-value>value1</param-value>
        </init-param>
        <init-param>
            <param-name>key2</param-name>
            <param-value>value2</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetServletConfig</servlet-name>
        <url-pattern>/config</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Dispatch</servlet-name>
        <servlet-class>servlet.请求转发.Dispatch</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Dispatch</servlet-name>
        <url-pattern>/dispatch</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Dispatched</servlet-name>
        <servlet-class>servlet.请求转发.Dispatched</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Dispatched</servlet-name>
        <url-pattern>/dispatched</url-pattern>
    </servlet-mapping>
</web-app>
